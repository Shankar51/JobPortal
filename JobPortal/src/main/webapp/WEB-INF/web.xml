
<web-app>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/shanacademy</param-value>
	</context-param>

	<context-param>
		<param-name>un</param-name>
		<param-value>root</param-value>
	</context-param>

	<context-param>
		<param-name>pwd</param-name>
		<param-value>Shankar@123</param-value>
	</context-param>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.shan.servlets.Validation</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Drive</servlet-name>
		<servlet-class>com.shan.servlets.Drives</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Drive</servlet-name>
		<url-pattern>/drive</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Eligible</servlet-name>
		<servlet-class>com.shan.servlets.Eligible</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Eligible</servlet-name>
		<url-pattern>/eligible</url-pattern>
	</servlet-mapping>


</web-app>